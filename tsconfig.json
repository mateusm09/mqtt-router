{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es2017"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "src/tests/**/*.test.ts",
        "lib"
    ],
}
